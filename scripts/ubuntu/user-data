#cloud-config
autoinstall:
  version: 1
  identity:
    hostname: ubuntu-baseline
    username: ubuntu
    password: "password"
  storage:
    layout:
      name: direct
  ssh:
    install-server: true
    allow-pw: true
  user-data:
    disable_root: false
  late-commands:
    - "echo 'ubuntu ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/ubuntu"
    - "chmod 440 /target/etc/sudoers.d/ubuntu"